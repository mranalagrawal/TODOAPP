<%- include('header') %>
<%- include('nav') %>


<ol class="list-group list-group-numbered container mt-5">
  <h1><span class="text-danger">CREATE </span>  TASK...</h1>
   
  <% if(tasks.length === 0){ %>
    <h2 class="text-danger mt-5 text-danger"> no task available 📝</h2>
  
  <% } %>

<% tasks.forEach(function(task){ %>
    
  <li class="list-group-item d-flex justify-content-between align-items-start mb-3">
    <div class="ms-2 me-auto">
      <h5 class="fw-bold"><%= task.title %></h5>
      <small class="text-danger"><%= task.deadline %></small> | <%= task.desc %>
    </div>
    <a href="/update/<%= task.id%>" class="me-3 fs-4  text-decoration-none">✏</a>
    <a href="/delete/<%= task.id %>" class="fs-4  text-decoration-none">❌</a>
  </li>

 <%  }) %>

 
  
</ol>



<%- include('footer') %>